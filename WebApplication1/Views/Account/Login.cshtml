@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_AuthLayout";
}

<link rel="stylesheet" href="~/css/style.css" />
<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<section>
    <div class="content p-5" style="max-width: 450px; width: 100%;">
        <div class="info text-center w-100">
            <div class="mb-4">
                <i class="bi bi-heart-fill" style="font-size: 2.5rem; color: #ff3cac;"></i>
            </div>
            <h2 class="fw-bold mb-1" style="color:white; font-size: 1.8rem;">Quỹ Từ Thiện</h2>
            <p class="text-white-50 mb-4" style="font-size: 0.9rem;">Hệ thống quản lý quỹ từ thiện</p>

            @if (ViewBag.ErrorAlert != null)
            {
                @Html.Raw(ViewBag.ErrorAlert)
            }

            <form asp-action="Login" method="post" class="text-start">
                <div class="mb-3">
                    <label for="Username" class="form-label fw-semibold">
                        <i class="bi bi-person-circle"></i> Tên đăng nhập
                    </label>
                    <input type="text" id="Username" name="Username" class="form-control" placeholder="Nhập tên đăng nhập" required />
                </div>

                <div class="mb-4">
                    <label for="Password" class="form-label fw-semibold">
                        <i class="bi bi-lock"></i> Mật khẩu
                    </label>
                    <input type="password" id="Password" name="Password" class="form-control" placeholder="Nhập mật khẩu" required />
                </div>

                <button type="submit" class="btn w-100 mt-3 py-2 fw-semibold">
                    <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
                </button>

                <hr class="my-4" style="border-color: rgba(255, 255, 255, 0.2);">

                <p class="mb-0 text-center text-white-50" style="font-size: 0.9rem;">
                    © 2025 Hệ Thống Quỹ Từ Thiện
                </p>
            </form>
        </div>
    </div>

    <!-- Hiệu ứng bay bay -->
    <ul class="circles">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
    </ul>
</section>
