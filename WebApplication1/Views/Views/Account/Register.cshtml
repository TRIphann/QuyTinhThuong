@{
    ViewData["Title"] = "Đăng ký";
    Layout = "_AuthLayout";
}

<link rel="stylesheet" href="~/css/style.css" />
<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

@if (ViewBag.ErrorAlert != null)
{
    @Html.Raw(ViewBag.ErrorAlert)
}

@if (ViewBag.SuccessAlert != null)
{
    @Html.Raw(ViewBag.SuccessAlert)
}

<section>
    <div class="content p-5" style="max-width: 500px; width: 100%;">
        <div class="info text-center w-100">
            <h2 class="fw-bold mb-4" style="color:white;">Tạo tài khoản mới</h2>

            <form asp-action="Register" method="post" class="text-start">
                <div class="mb-3">
                    <label for="FullName" class="form-label fw-semibold text-white">Họ và tên</label>
                    <input type="text" id="FullName" name="FullName" class="form-control" placeholder="Nhập họ và tên" required />
                </div>

                <div class="mb-3">
                    <label for="Email" class="form-label fw-semibold text-white">Email</label>
                    <input type="email" id="Email" name="Email" class="form-control" placeholder="Nhập địa chỉ email" required />
                </div>

                <div class="mb-3">
                    <label for="Username" class="form-label fw-semibold text-white">Tên đăng nhập</label>
                    <input type="text" id="Username" name="Username" class="form-control" placeholder="Nhập tên đăng nhập" required />
                </div>

                <div class="mb-3">
                    <label for="Password" class="form-label fw-semibold text-white">Mật khẩu</label>
                    <input type="password" id="Password" name="Password" class="form-control" placeholder="Nhập mật khẩu" required />
                </div>

                <div class="mb-3">
                    <label for="Phone" class="form-label fw-semibold text-white">Số điện thoại</label>
                    <input type="text" id="Phone" name="Phone" class="form-control" placeholder="Nhập số điện thoại" />
                </div>

                <button type="submit" class="btn w-100 py-2 mt-3">Đăng ký</button>

                <p class="mt-4 mb-0 text-center text-white">
                    Đã có tài khoản?
                    <a href="/Account/Login" class="fw-bold" style="color:#fff; text-decoration:underline;">Đăng nhập ngay</a>
                </p>
            </form>
        </div>
    </div>

    <!-- Hiệu ứng bay bay -->
    <ul class="circles">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
    </ul>
</section>
